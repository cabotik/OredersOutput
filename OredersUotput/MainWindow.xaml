<Window x:Class="OredersUotput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OredersUotput"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="Add order" Background="LightPink" BorderThickness="0" Width="100" Height="100" Margin="5" Name="btnAddOrder" Click="btnAddOrder_Click"/>
            <Button Content="View order" Background="LightPink" BorderThickness="0" Width="100" Height="100" Margin="5" Name="btnViewOrder" Click="btnViewOrder_Click"/>
        </StackPanel>
    </Grid>
</Window>
